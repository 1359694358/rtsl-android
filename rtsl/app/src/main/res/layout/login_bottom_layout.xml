<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gov1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@+id/gov2"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即同意"
            android:textColor="#ff5d6164"
            android:textSize="@dimen/dimen11" />

        <TextView
            android:id="@+id/gov2"
            app:layout_constraintStart_toEndOf="@+id/gov1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gov3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户使用条款》"
            android:textColor="#909090"
            android:textSize="@dimen/dimen11" />

        <TextView
            android:id="@+id/gov3"
            app:layout_constraintStart_toEndOf="@+id/gov2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@+id/gov4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="#ff5d6164"
            android:textSize="@dimen/dimen11" />

        <TextView
            android:id="@+id/gov4"
            app:layout_constraintStart_toEndOf="@+id/gov3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《润泰丝路隐私政策》"
            android:textColor="#909090"
            android:textSize="@dimen/dimen11" />

        <TextView
            android:id="@+id/loginByWeChat"
            app:layout_constraintEnd_toStartOf="@+id/loginByAliPay"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:gravity="center"
            android:drawableTop="@mipmap/login_wechat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gov1"
            android:layout_marginBottom="@dimen/dimen151"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textColor="#ff5d6164"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/loginByAliPay"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen42"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/loginByWeChat"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableTop="@mipmap/login_alipay"
            app:layout_constraintBottom_toTopOf="@+id/gov1"
            android:layout_marginBottom="@dimen/dimen151"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝登录"
            android:textColor="#ff5d6164"
            android:textSize="11sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>